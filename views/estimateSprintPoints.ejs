<% include partials/header %>
<% include partials/navbar %>


<div class="modal show" id="myModal" aria-modal = "true" style="display: block;" role="dialog" tabindex="-1">
  <div class="modal-dialog" role="document">
    <div class="modal-content">

      <!-- Modal Header -->
      <div class="modal-header">
        <h4 class="modal-title">Sprint Points Estimation</h4>
        <a class="btn close" href="/<%= team._id %>/productBacklog">&times;</a>
      </div>

      <!-- Modal body -->
      <div class="modal-body show">
        <form action="/<%= team._id %>/estimateSprintPoints" method="post">
            <% for(var i = 0 ; i < 3; i++){ %>
                <div class="form-group">
                <label for="estimatedSprintPoints-<%=i+1%>">Sprint <%=i+1%></label>
                <input type="number" name="estimatedSprintPoints[<%=i%>]" class="form-control sprintPoints" id="estimatedSprintPoints-<%=i+1%>" value="<%=team.sprintPoints[i].estimate%>">
                </div>
            <%}%>
            <div class="form-group">
                <label for="totalSprintPoints">Total Points</label>
                <input type="number" class="form-control" id="totalSprintPoints" value="0" disabled>
            </div>
            <button type="submit" class="btn btn-primary float-right">Submit</button>
          </form>
          <hr>
      </div>

    </div>
  </div>
</div>
<div class="modal-backdrop show"></div>

<% include partials/sidebarFooter %>
<% include partials/footer %>
