<% include partials/header %>
<% include partials/navbar %>


  <div class="modal show" id="myModal" aria-modal = "true" style="display: block;" role="dialog" tabindex="-1">
  <div class="modal-dialog" role="document">
    <div class="modal-content">

      <!-- Modal Header -->
      <div class="modal-header">
        <h4 class="modal-title">Add User Story</h4>
        <%if(team){%>
        <a class="btn close" href="/<%= team._id %>/productBacklog">&times;</a>
        <%} else{%>
        <a class="btn close" href="/create_session/productBacklog">&times;</a>
        <%}%>
      </div>

      <!-- Modal body -->
      <div class="modal-body show">
          <%if(team){%>
            <form action="/<%= team._id %>/productBacklog/new" method="post">
            <%} else{%>
              <form action="/create_session/productBacklog/new" method="post">
            <%}%>
        
            <div class="form-group">
              <label for="story-role">As a</label>
              <input type="text" name="story[role]" class="form-control" id="story-role" placeholder="Role" required>
            </div>
            <div class="form-group">
              <label for="story-action">I want to</label>
              <input type="text" name="story[action]" class="form-control" id="story-action" placeholder="Action" required>
            </div>
            <div class="form-group">
              <label for="story-benefit">So that</label>
              <input type="text" name="story[benefit]" class="form-control" id="story-benefit" placeholder="Benefit" required>
            </div>
            <div class="form-group">
              <label for="story-value">Story Value</label>
              <input type="number" name="story[value]" class="form-control" id="story-value" placeholder="Value" required>
            </div>

            <button type="submit" class="btn btn-primary float-right">Submit</button>
          </form>
          <hr>
      </div>

    </div>
  </div>
</div>
<div class="modal-backdrop show"></div>

