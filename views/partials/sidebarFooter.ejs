<script type="text/javascript">
    $(document).ready(function () {
    var burnedArray = $("#chartContainer").attr("burnedStr").split(",");
    var burned=[];
    for(var i = 0; i < burnedArray.length-1; i++){
        var temp = burnedArray[i].split(":");
        burned.push({x: parseInt(temp[0]),y: parseInt(temp[1])});
    }
    var estimateArray = $("#chartContainer").attr("estimateStr").split(",");
    var estimate=[];
    for(var i = 0; i < estimateArray.length-1; i++){
        var temp = estimateArray[i].split(":");
        estimate.push({x:parseInt(temp[0]),y: parseInt(temp[1])});
    }
    var chart = new CanvasJS.Chart("chartContainer", {
        animationEnabled: true,
        theme: "light2",
        axisX:{
            title: "Sprint",
            interval: 1,
            includeZero: false,
            crosshair: {
                enabled: true,
                snapToDataPoint: true
            }
        },
        axisY: {
            title: "Points Remaining",
            crosshair: {
                enabled: true
            }
        },
        toolTip:{
            shared:true
        },
        legend:{
            cursor:"pointer",
            verticalAlign: "bottom",
            horizontalAlign: "left",
            dockInsidePlotArea: true,
            itemclick: toogleDataSeries
        },
        data: [{
            type: "line",
            lineThickness: 5,
            showInLegend: true,
            name: "Actual",
            markerType: "square",
            color: "#F08080",
            dataPoints: burned
        },
        {
            type: "line",
            lineThickness: 5,
            showInLegend: true,
            name: "Estimate",
            lineDashType: "dash",
            dataPoints: estimate
        }]
    });
    chart.render();

    function toogleDataSeries(e){
        if (typeof(e.dataSeries.visible) === "undefined" || e.dataSeries.visible) {
            e.dataSeries.visible = false;
        } else{
            e.dataSeries.visible = true;
        }
        chart.render();
    }

})

</script>

